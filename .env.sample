# -------------------------
# API Keys (obligatorio para OpenAI)
# -------------------------
OPENAI_API_KEY=

# -------------------------
# Modelos
# -------------------------
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# -------------------------
# RAG
# -------------------------
MANUALS_DIR=./data/manuales
INDEX_DIR=./data/rag_index
RAG_TOP_K=4
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=150

# RAG_MODE:
#   none -> RAG solo cuando el agente lo pide via manual_search()
#   auto -> Siempre inyectar contexto antes de ACT
#   both -> auto + manual_search disponible (recomendado)
RAG_MODE=both

# -------------------------
# Memoria (elige uno)
# -------------------------
CHECKPOINTER=memory
# CHECKPOINTER=sqlite
CHECKPOINT_DB=./data/checkpoints.sqlite

# -------------------------
# Logging
# -------------------------
LOGGING_CONFIG=./config/logging.yaml
LOG_LEVEL=INFO

# -------------------------
# CLI default
# -------------------------
THREAD_ID=cli-session-1
